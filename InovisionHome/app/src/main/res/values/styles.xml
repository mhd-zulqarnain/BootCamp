    <style name="Theme.Custom" parent="@android:style/Theme">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/array_dot_active</item>
        <item name="android:weekNumberColor">@color/colorAccent</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

